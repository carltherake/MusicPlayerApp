{
  "manifest_version": 2,
  "name": "MusicPlayerApp",
  "short_name": "MusicPlayerApp",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",
  
  "browser_action": { "default_icon": "assets/icon_128.png", "default_popup": "index.html" },

  "icons": { "16": "assets/icon_16.png", "128": "assets/icon_128.png" },
  "permissions": ["storage", "alarms", "notifications", "background"],
  "app": { "background": { "scripts": ["background.js"] } }
}
